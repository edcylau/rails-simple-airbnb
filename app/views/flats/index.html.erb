<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://kit.fontawesome.com/d65afde9fc.js" crossorigin="anonymous"></script>
</head>
<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">Simple Airbnb</span>
  <form class="form-inline">
    <%= link_to "Add Flat", new_flat_path, class: 'btn btn-primary'%>
  </form>
</nav>
<div class="container">
  <h2 class="m-3">All our Flats(<%= @flats.count %>)</h2>
  <div class="card-deck">
    <% @flats.each do |flat| %>
    <div class="card">
     <div class="card-header h-100">
      <h3><%= flat[:name] %></h3>
      <%= flat[:address] %>,
      <%= flat[:city] %>
      <div class="flex">
        <i class="fas fa-users"></i>  <%= flat[:number_of_guests] %>
      </div>
     </div>
     <div class="card-body">
       <%= link_to "More Info", flat_path(flat.id) %>
     </div>
    </div>
    <% end %>
  </div>
</div>
